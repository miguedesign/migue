	margin 0
	padding 0
	border 0
	font-size 100%
	font inherit
	vertical-align baseline
article,
aside,
details,
figcaption,
figure,
footer,
header,
menu,
nav,
section 
	display block
img 
	display block
	width 100%
body 
	line-height 1
	background #fff
	color dark_color
	display block
	font-family "Avenir Next", "Noto sans", sans-serif
	margin 0
	padding 0
	text-align center
	font-size 1em
	line-height 1.8em
	transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
* 
	box-sizing border-box
h1,h2,h3,h4 
	display inline-block
	margin 1em 0
.Header 
	position fixed
	top 0
	left 0
	padding 20px 10vw
	width 100%
	display flex
	justify-content space-between
	align-items center
	transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
	z-index 1000
	background-color rgba(light_color, 0.95)
.logo 
	display inline-block
	text-decoration none
	font-size 24px
	font-weight bold
	color dark_color
.menu 
	width 30%
	text-align right
	a 
		text-decoration none
		font-size 14px
		line-height 40px
		color dark_color
		opacity 0.7
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
		&:hover 
			opacity 1
	ul 
		list-style none
		padding-left 0
		margin 0
		li 
			&:hover 
				overflow visible
				ul 
					top 100%
					opacity 1
			ul 
				background-color light_color
				position absolute
				top 50%
				transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
				z-index -1
				width 200px
				padding 10px
				left 50%
				opacity 0
				margin-left -100px
				border solid thin rgba(0,0,0, 0.1)
				li 
					display block
					width 100%
					text-align left
					a 
						padding 10px
	& > ul 
		& > li 
			display inline-block
			text-align center
			margin-left 20px
			overflow hidden
			position relative
			vertical-align top
			&:last-child 
				width 30px
				padding 12px
				margin-left 10px
			& > a 
				vertical-align middle
a 
	&.button-daynight 
		border-radius 50%
		display block
		height 14px
		opacity 1
		padding 0
		position relative
		width 14px
		box-shadow inset 0px 0px 0px 2px dark_color
		overflow hidden
		transform box-shadow .3s ease-in-out
		&.is-night 
			box-shadow inset 0px 0px 0px 2px light_color
			&:after 
				background-color light_color
				transform translateX(50%)
		&:hover 
			opacity .7
.button-daynight 
	&:after 
		content ''
		display block
		position absolute
		width 100%
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
		background-color dark_color
		left 0
		transform translateX(-50%)
		height 100%
		top 0
.Hero 
	padding 200px 10vw 80px
	text-align left
	h1 
		font-size 60px
		font-weight bold
		display block
		margin-bottom 20px
	h2 
		font-size 24px
		font-weight normal
		opacity .6
.main 
	padding 4vw 10vw
	text-align left
article 
	display inline-block
	width 44%
	margin-top 10px
	margin-bottom 60px
	position relative
	&:nth-child(2n 
		& + 1) 
			margin-right 10%
	h3 
		font-size 24px
		margin-bottom 0
	p 
		font-size 14px
	a 
		color dark_color
		text-decoration none
		display block
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
		&:hover 
			z-index 100
			.img-day 
				img 
					transform scale(1.1)
.img-day 
	display block
	overflow hidden
	img 
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
.Dark 
	color rgba(light_color, 0.8)
	background-color dark_color
	.Header 
		background-color rgba(0,0,0, 0.90)
	.logo 
		color rgba(light_color, 0.9)
	a 
		color rgba(light_color, 0.8)
	.menu 
		ul 
			li 
				ul 
					background-color dark_color
					border solid thin rgba(light_color, 0.2)



