	margin 0
	padding 0
	border 0
	font-size 100%
	font inherit
	vertical-align baseline
article,
aside,
details,
figcaption,
figure,
footer,
header,
menu,
nav,
section 
	display block
	
::selection
	background dark_color
	color light_color
  
img 
	display block
	width 100%
body 
	line-height 1
	background #fff
	color dark_color
	display block
	font-family "Avenir Next", "Noto sans", sans-serif
	margin 0
	padding 0
	text-align center
	font-size 1em
	line-height 1.8em
	transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
* 
	box-sizing border-box
h1,h2,h3,h4 
	display inline-block
	margin 1em 0

.Header 
	position fixed
	top 0
	left 0
	padding 10px 4vw
	width 100%
	display flex
	justify-content space-between
	align-items center
	transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
	z-index 1000
	background-color light_color
	text-align left
.logo 
	display inline-block
	text-decoration none
	font-size 24px
	font-weight bold
	color dark_color
.btn-menu
	display inline-block
	width 40px
	height 40px
	position relative
	transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
	span
		display none
	&::after
		content ''
		display block
		width 10px
		height 10px
		border-bottom solid 2px rgba(dark_color, 0.6)
		border-right solid 2px rgba(dark_color, 0.6)
		transform rotate(45deg)
		position absolute
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
		top 50%
		left 50%
		margin-top -10px
		margin-left -7px
		
	&.is-clicked
		transform rotate(-180deg)
	
.menu 
	width 100%
	transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
	background-color light_color
	height 0px
	overflow hidden
	position fixed 
	z-index -1
	top 60px
	left 0
	&.is-open
		padding-top 20px
		display block
		height 100vh
		width 100%
		
	a 
		text-decoration none
		font-size 14px
		line-height 40px
		color dark_color
		opacity 0.7
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
	ul 
		width 100%
		list-style none
		padding 0
		margin 0
		li 
			display block
			margin 0 0 20px 0
			a
				font-weight bold
				padding-left 30px
			ul 
				display block
				margin-left 30px
				transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
				border-left solid thin rgba(dark_color, .2)
				li 
					width 100%
					display block
					text-align left
					margin-bottom 0
					a 
						display block
						font-weight normal
a.button-daynight 
	border-radius 50%
	box-shadow inset 0px 0px 0px 2px dark_color
	display block
	height 14px
	margin-left 30px
	opacity 1
	overflow hidden
	padding 0 !important
	position relative
	transform box-shadow .3s ease-in-out
	width 14px
	&.is-night 
		box-shadow inset 0px 0px 0px 2px light_color
		&:after 
			background-color light_color
			transform translateX(50%)
	&:hover 
		opacity .7
	&:after 
		content ''
		display block
		position absolute
		width 100%
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
		background-color dark_color
		left 0
		transform translateX(-50%)
		height 100%
		top 0
		
.Hero 
	padding 120px 4vw 80px
	text-align left
	h1 
		font-size 30px
		font-weight bold
		display block
		margin-bottom 0
	h2 
		font-size 18px
		font-weight normal
		opacity .6
.main 
	padding 4vw
	text-align left
article 
	display inline-block
	width 100%
	margin-top 10px
	margin-bottom 60px
	position relative
	h3 
		font-size 24px
		margin-bottom 0
	p 
		font-size 14px
	a 
		color dark_color
		text-decoration none
		display block
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
.img-day 
	display block
	overflow hidden
	img 
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)



.Dark 
	color rgba(light_color, 0.8)
	background-color dark_color
	.Header 
		background-color rgba(dark_color 0.90)
	.logo 
		color rgba(light_color, 0.9)
	a 
		color rgba(light_color, 0.8)
	.btn-menu
		&:after
			border-color light_color
	.menu 
		background-color dark_color
		ul 
			li 
				ul 
					background-color dark_color
					border-left solid thin rgba(light_color, .2)
					



@media only screen and (min-width:601px)
	.Header 
		position fixed
		top 0
		left 0
		padding 20px 10vw
		width 100%
		display flex
		justify-content space-between
		align-items center
		transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
		z-index 1000
		background-color rgba(light_color, 0.95)
	.logo 
		display inline-block
		text-decoration none
		font-size 24px
		font-weight bold
		color dark_color
	.btn-menu 
		display none
	.menu 
		width 50%
		text-align right
		overflow visible
		text-align right
		height auto
		position relative 
		top 0
		padding 0
		a
			&:hover 
				opacity 1
		ul 
			
			li 
				margin 0
				a
					font-weight normal
				&:hover 
					overflow visible
					ul 
						top 100%
						opacity 1
				ul 
					background-color light_color
					position absolute
					top 50%
					transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
					z-index -1
					width 200px
					padding 10px
					left 50%
					opacity 0
					margin-left -100px
					border solid thin rgba(0,0,0, 0.1)
					li 
						display block
						width 100%
						text-align left
						a 
							padding-left 0
		& > ul 
			& > li 
				display inline-block
				text-align center
				overflow hidden
				position relative
				vertical-align top
				&:last-child 
					width 30px
					padding 12px
					margin-left 10px
				& > a 
					vertical-align middle
	a.button-daynight 
		border-radius 50%
		display block
		height 14px
		opacity 1
		padding 0
		margin-left 0
		position relative
		width 14px
		box-shadow inset 0px 0px 0px 2px dark_color
		overflow hidden
		transform box-shadow .3s ease-in-out
		&.is-night 
			box-shadow inset 0px 0px 0px 2px light_color
			&:after 
				background-color light_color
				transform translateX(50%)
		&:hover 
			opacity .7
		&:after 
			content ''
			display block
			position absolute
			width 100%
			transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
			background-color dark_color
			left 0
			transform translateX(-50%)
			height 100%
			top 0
	.Hero 
		padding 200px 10vw 80px
		h1 
			font-size 60px
			margin-bottom 20px
		h2 
			font-size 24px
			opacity .6
	.main 
		padding 4vw 10vw
	article 
		display inline-block
		width 44%
		margin-top 10px
		margin-bottom 60px
		&:nth-child(2n + 1) 
				margin-right 12%
		a 
			color dark_color
			text-decoration none
			display block
			transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
			&:hover 
				z-index 100
				.img-day 
					img 
						transform scale(1.1)
	.img-day 
		display block
		overflow hidden
		img 
			transition all .3s cubic-bezier(0.645, 0.045, 0.355, 1)
	



